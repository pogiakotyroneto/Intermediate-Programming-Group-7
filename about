<script>
  function openPopup(id) {
  var popupContainer = document.getElementById(`popupContainer${id}`);
  popupContainer.style.display = "flex";
}

function closePopup(id) {
  var popupContainer = document.getElementById(`popupContainer${id}`);
  popupContainer.style.display = "none";
}

</script>
